{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notifications</h1>
    <ul>
        {% for notification in notifications %}
            <li>
                <strong>
                    {# <a href="{{ path('user_profile', {'id': notification.user.id}) }}"> #}
                        {{ notification.user.pseudo }}
                    {# </a> #}
                </strong> has liked 
                <a href="{{ path('post_show', {'slug': notification.post.slug}) }}">
                    {{ notification.post.title }}
                </a>
            </li>
        {% else %}
            <li>No notifications</li>
        {% endfor %}
    </ul>
{% endblock %}
