{% extends 'layouts/notifications_layout.html.twig' %}

{% set title = 'Notifications' %}
{% set markAsReadPath = path('mark_notifications_read') %}

{% block notification_content %}
    {% if notification.type == "like" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'like',
            content: notification.post.description
        } %}
    {% elseif notification.type == "likeComment" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'likeComment',
            content: notification.comment.content
        } %}
    {% elseif notification.type == "comment" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'comment',
            content: notification.comment.content
        } %}
    {% elseif notification.type == "reply" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'reply',
            content: notification.comment.content
        } %}
    {% elseif notification.type == "request" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'request',
            content: notification.user.bio
        } %}
    {% elseif notification.type == "follow" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'follow',
            content: notification.user.bio
        } %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {% include "partials/_pagination.html.twig" with {
        'route': 'notifications_index',
        'parameters': {},
        'page': currentPage,
        'pages': totalPages
    } %}
{% endblock %}


