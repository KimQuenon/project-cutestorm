{% extends 'layouts/notifications_layout.html.twig' %}

{% set title = 'Comments' %}
{% set markAsReadPath = path('mark_comments_read') %}

{% block notification_content %}
    {% if notification.type == "comment" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'comment',
            content: notification.comment.content
        } %}
    {% elseif notification.type == "reply" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'reply',
            content: notification.comment.content
        } %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {% include "partials/_pagination.html.twig" with {
        'route': 'notifications_comments',
        'parameters': {},
        'page': currentPage,
        'pages': totalPages
    } %}
{% endblock %}


