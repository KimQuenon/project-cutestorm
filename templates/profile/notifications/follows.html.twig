{% extends 'layouts/notifications_layout.html.twig' %}

{% set title = 'Follows' %}
{% set markAsReadPath = path('mark_follows_read') %}

{% block notification_content %}
    {% if notification.type == "request" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'request',
            content: notification.user.bio
        } %}
    {% elseif notification.type == "follow" %}
        {% include "partials/_listItem.html.twig" with {
            type: 'notification',
            category: 'follow',
            content: notification.user.bio
        } %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {% include "partials/_pagination.html.twig" with {
        'route': 'notifications_follows',
        'parameters': {},
        'page': currentPage,
        'pages': totalPages
    } %}
{% endblock %}


