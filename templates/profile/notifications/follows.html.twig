{% extends 'layouts/notifications_layout.html.twig' %}

{% set title = 'Follow Notifications' %}
{% set markAsReadPath = path('mark_follows_read') %}

{% block notification_content %}
    {% if notification.type == "follow" %}
        <strong>{{ notification.user.pseudo }}</strong> followed you.
    {% elseif notification.type == "request" %}
        <strong>{{ notification.user.pseudo }}</strong> accepted your request.
    {% endif %}
{% endblock %}

{% block pagination %}
    {% include "partials/_pagination.html.twig" with {
        'route': 'notifications_follows',
        'parameters': {},
        'page': currentPage,
        'pages': totalPages
    } %}
{% endblock %}