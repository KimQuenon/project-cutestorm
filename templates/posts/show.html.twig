{% extends "base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                {% include "partials/_like.html.twig" with {'post': post} %}
                {% include "partials/_follow.html.twig" with {'user': post.author} %}
            </div>
            {% if app.user == post.author %}
                <div>
                    <a href="{{ path('post_edit', {'slug': post.slug}) }}" class="btn btn-warning btn-sm me-2">Edit post</a>
                    <a href="{{ path('post_pictures', {'slug': post.slug}) }}" class="btn btn-primary btn-sm me-2">Edit pictures</a>
                    <a href="{{ path('post_delete', {'slug': post.slug}) }}" class="btn btn-danger btn-sm">Delete post</a>
                </div>
            {% endif %}
        </div>

        <div class="post-header mb-5">
            <h1 class="display-4 fw-bold">{{ post.title }}</h1>
            <p class="lead text-muted">{{ post.description | raw }}</p>
        </div>

        {% if post.postImages is not empty %}
            <div class="row mb-4 g-3">
                {% for postImage in post.postImages %}
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <img src="{{ asset('uploads/' ~ postImage.filename) }}" class="card-img-top" alt="Image">
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <h2 class="mt-5">Comments</h2>

        {% if comments is empty %}
            <div class="alert alert-info" role="alert">
                No comments yet. Be the first to comment!
            </div>
        {% else %}
            <ul class="list-group list-group-flush mb-4">
                {% for comment in comments %}
                    <li class="list-group-item d-flex justify-content-between align-items-start bg-light">
                        <div>
                            <strong class="d-block">{{ comment.author.pseudo }}</strong>
                            <p class="mb-1">{{ comment.content }}</p>
                        </div>
                        <small class="text-muted">{{ comment.timestamp|date('Y-m-d H:i') }}</small>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        {% if app.user %}
            <h3 class="mt-4">Add a Comment</h3>
            {{ form_start(myForm) }}
            {{ form_widget(myForm.content) }}
            {{ form_errors(myForm.content) }}
            <button type="submit" class="btn btn-primary mt-2">Submit Comment</button>
            {{ form_end(myForm) }}
        {% else %}
            <div class="alert alert-warning mt-4" role="alert">
                You must be logged in to post a comment.
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('like') }}
{% endblock %}
