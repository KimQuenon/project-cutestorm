{% extends 'base.html.twig' %}

{% block title %}Images of {{ post.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Images of {{ post.title }}</h1>
        <a href="{{ path('post_add_image', {'slug': post.slug}) }}" class="btn btn-success mb-4">Add New Image</a>
        <div class="row">
            {% for image in images %}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="{{ asset('uploads/' ~ image.filename) }}" class="card-img-top img-fluid" alt="Image for {{ post.title }}">
                    </div>
                    <a href="{{path('post_picture_delete', {'id':image.id})}}" class="btn btn-danger mt-4">Remove</a>
                </div>
            {% endfor %}
        </div>
        <a href="{{path('post_show', {'slug':post.slug})}}" class="btn btn-primary mt-4">Back to my post</a>
    </div>
{% endblock %}