{% extends 'base.html.twig' %}

{% block title %}Payment Successful{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-success text-center" role="alert">
                <h1 class="display-4">Payment Successful!</h1>
                <p class="lead">Thank you for your purchase. Your order has been placed successfully.</p>
                <hr class="my-4">
                <p class="mb-0">You can track your orders by clicking the button below.</p>
            </div>
            <div class="d-flex justify-content-center">
                <a href="{{ path('orders_index') }}" class="btn btn-primary btn-lg mt-3">
                    <i class="fas fa-clipboard-list"></i> View My Orders
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
