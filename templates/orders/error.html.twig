{% extends 'base.html.twig' %}

{% block title %}Payment Error{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger text-center" role="alert">
                <h1 class="display-4">Payment Error!</h1>
                <p class="lead">Unfortunately, there was an issue processing your payment. Please try again.</p>
                <hr class="my-4">
                <p class="mb-0">You can view your orders or attempt the payment again by clicking the button below.</p>
            </div>
            <div class="d-flex justify-content-center">
                <a href="{{ path('orders_index') }}" class="btn btn-primary btn-lg mt-3">
                    <i class="fas fa-clipboard-list"></i> View My Orders
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
