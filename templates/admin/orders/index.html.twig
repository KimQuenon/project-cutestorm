{% extends 'layouts/orders_layout.html.twig' %}

{% block title %}Admin Orders{% endblock %}

{% set currentTab = 'admin_orders_index' %}

{% block accountHeader %}
    {% include "partials/_accountHeader.html.twig" with {
        title:  "$ " ~ (total | number_format(2, ',', '.')),
        content: "That's how much the store has let you gained since the start of his activity... Pretty much, isn't it ?",
        showButton: false,
        secondPath: path('homepage'),
        secondLink: 'Back to home',
        type: 'admin'
    } %}
{% endblock %}

{% block pagination %}
    {% include "partials/_pagination.html.twig" with {
        'route': 'admin_orders_index',
        'parameters': {},
        'page': currentPage,
        'pages': totalPages
    } %}
{% endblock %}