{% extends 'layouts/orders_layout.html.twig' %}

{% block title %}Unpaid Orders{% endblock %}

{% set currentTab = 'admin_orders_index' %}

{% block accountHeader %}
    {% include "partials/_accountHeader.html.twig" with {
        title:  "$ " ~ (totalUnpaid | number_format(2, ',', '.')),
        content: "Uh oh, it seems like there is some unpaid invoices in there... Let's keep that in check, just in case we need to intervene...",
        showButton: false,
        secondPath: path('admin_orders_index'),
        secondLink: 'Orders',
