{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="border rounded shadow-sm">
                <img src="https://via.placeholder.com/600" class="img-fluid rounded" alt="{{ product.name }}">
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <h4 class="display-4 mb-3">{{ product.name }}</h4>
            <p class="text-muted mb-4">{{ product.reference }}</p>
            <h3 class="text-success mb-4">${{ product.price }}</h3>
            <p class="mb-4">{{ product.description }}</p>
            {% if product.color %}
                <div class="d-flex align-items-center mb-4">
                    <div class="color-swatch" style="width: 30px; height: 30px; background-color: {{ product.color.hexCode }}; border-radius: 50%;"></div>
                    <p class="ms-3 mb-0">{{ product.color.name }}</p>
                </div>
            {% else %}
                <p class="text-muted">No color available</p>
            {% endif %}

            {% if product.productVariants|length > 0 %}
                <div class="mt-4">
                    <h5>Available Sizes:</h5>
                    <ul class="list-unstyled">
                        {% for variant in product.productVariants %}
                            <li>
                                <span class="badge bg-secondary">{{ variant.size }}</span> 
                                ({{ variant.stock }} in stock)
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% else %}
                <p class="text-muted">No sizes available</p>
            {% endif %}

            <div class="d-flex align-items-center">
                <a href="#" class="btn btn-primary me-3">Add to Cart</a>
                <a href="{{ path('products_index') }}" class="btn btn-outline-secondary">Back to Products</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
