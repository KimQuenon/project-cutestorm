{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="border rounded shadow-sm">
                <img src="https://via.placeholder.com/600" class="img-fluid rounded" alt="{{ product.name }}">
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <h4 class="display-4 mb-3">{{ product.name }}</h4>
            <p class="text-muted mb-4">{{ product.reference }}</p>
            <h3 class="text-success mb-4">${{ product.price }}</h3>
            <p class="mb-4">{{ product.description }}</p>
            <p class="mt-4">Colors Available:</p>
            <div class="mb-4">
                {% if product.colors %}
                    <ul class="list-inline">
                        {% for color in product.colors %}
                            <li class="list-inline-item">
                                <span class="badge rounded-pill" style="background-color: {{ color }}; color: #fff; width: 30px; height: 30px; display: inline-block; border: 1px solid #ccc;"></span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-muted">No colors available</p>
                {% endif %}
            </div>
            <p class="mt-4">Sizes Available:</p>
            <div class="mb-4">
                {% if product.sizes %}
                    <ul class="list-inline">
                        {% for size in product.sizes %}
                            <li class="list-inline-item">
                                <span class="badge bg-secondary">{{ size }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-muted">No sizes available</p>
                {% endif %}
            </div>
            <div class="d-flex align-items-center">
                <a href="#" class="btn btn-primary me-3">Add to Cart</a>
                <a href="{{ path('products_index') }}" class="btn btn-outline-secondary">Back to Products</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
