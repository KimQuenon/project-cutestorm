{% extends "base.html.twig" %}

{% block title %}New Product{% endblock %}

{% form_theme myForm _self %}

{% block body %}
    <div class="container mt-4">
        <h1>New Product</h1>

        {{ form_start(myForm) }}
             {{form_widget(myForm)}}
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        {{ form_end(myForm) }}
    </div>
{% endblock %}

{% block form_row %}
    <div class="form-group mt-2">
        <div class="row">
            <div class="col-6">
                {{form_label(form)}}
            </div>
            <div class="col-6">
                {{form_widget(form)}}
            </div>
        </div>
    </div>
{% endblock %}
