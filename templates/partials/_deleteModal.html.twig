{# partials/_deleteModal.html.twig #}
<button class="badge badge-danger" onclick="openModal('deleteModal{{ slug }}')">
    <i class="fa-solid fa-trash-can"></i>
</button>

<div id="deleteModal{{ slug }}" class="fixed inset-0 z-50 hidden bg-tertiary bg-opacity-50 transition-opacity duration-300 ease-out opacity-0">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="relative w-full max-w-md bg-white rounded-xl shadow">
            <div class="flex items-start justify-between p-4 border-b-0 rounded-t-xl border-2 border-tertiary-dark bg-primary-dark">
                <h3 class="text-background font-bold">Delete Confirmation</h3>
                <button type="button" class="text-background bg-transparent hover:bg-primary-hover hover:text-tertiary-light rounded-lg text-sm p-2 ml-auto inline-flex items-center justify-center w-5 h-5" onclick="closeModal('deleteModal{{ slug }}')">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <div class="border-2 border-tertiary-dark border-t-none rounded-b-xl">
                <div class="p-6">
                    <p>Are you sure you want to delete this?</p>
                </div>

                <div class="flex items-center justify-end p-4 border-t">
                    <button type="button" class="btn btn-white mr-2" onclick="closeModal('deleteModal{{ slug }}')">Cancel</button>
                    <a href="{{ modalAction }}" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function openModal(modalId) {
    const modal = document.getElementById(modalId);
    modal.classList.remove('hidden');
    setTimeout(() => {
        modal.classList.remove('opacity-0');
    }, 0);
}

function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    modal.classList.add('opacity-0');
    setTimeout(() => {
        modal.classList.add('hidden');
    }, 300);
}
</script>
