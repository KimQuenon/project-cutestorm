{% set isLiked = idOrSlug in likedIds %}
{% set isAuthor = app.user and authorId == app.user.id %}

<div class="flex justify-center items-center gap-2">
    <button class="like-button border-none cursor-pointer like-{{ type }} {% if isLiked %}liked{% else %}not-liked{% endif %} {% if isAuthor %}disabled{% endif %}" data-{{ type }}-{{ type == 'post' ? 'slug' : 'id' }}="{{ idOrSlug }}">
        <i class="fa fa-heart"></i>
    </button>
    <span class="like-count {% if isLiked %}liked{% else %}not-liked{% endif %}">{{ likeCount }}</span>
</div>

