{% if position %}
    <span class="w-20 p-2 text-tertiary-dark bg-{{ position }} rounded-full text-center border-2 border-tertiary-dark font-bold">
        <i class="{{ iconClass }}"></i> 
        {% if position == 'gold' %}
            1<sup>st</sup>
        {% elseif position == 'silver' %}
            2<sup>nd</sup>
        {% elseif position == 'bronze' %}
            3<sup>rd</sup>
        {% endif %}
    </span>
{% endif %}
