{% include "partials/_cardHeader.html.twig" with { backgroundClass: 'bg-tertiary' } %}
<div class="w-full bg-white border-2 border-tertiary-dark p-6 py-8 rounded-b-xl">
    <div class="flex md:flex-row flex-col md:gap-8 gap-2">
        <div class="w-20 relative ">
            <div class="logo-eyes normal-eyes transform scale-x-[-1] absolute -top-1.5 left-1/2 -translate-x-1/2 z-10"></div>
                <img src="/uploads/{{ review.author.avatar }}" alt="avatar of {{ review.author.pseudo}}" class="w-20 h-20 border-2 border-tertiary-dark rounded-full relative object-cover"></img>
            </div>
        <div class="lg:w-5/6 w-full">
            <div class="flex flex-row flex-wrap justify-between">
                <p class="text-lg"><span class="subtitle">{{review.author.pseudo}}</span> - User since {{ review.author.timestamp|date('Y') }}</p>
                {% include "partials/_rating.html.twig" with {'rating': review.rating} %}
            </div>
            <p>"{{review.content}}"</p>
        </div>
    </div>
</div>