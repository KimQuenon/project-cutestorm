<span class='rating'>
    {% set filledStars = rating | round(0, 'floor') %}
    
    {% for i in 1..5 %}
        {% if i <= filledStars %}
            <i class='fas fa-star star-filled text-secondary'></i>
        {% else %}
            <i class='far fa-star star-empty text-tertiary'></i>
        {% endif %}
    {% endfor %}
</span>