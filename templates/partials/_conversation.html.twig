<div class="list-group">
    {% for item in items %}
        <a href="{{ path(route, {'id': item.id}) }}" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">
                    {% if app.user == item.sender %}
                        {{ item.recipient.pseudo }}
                    {% else %}
                        {{ item.sender.pseudo }}
                    {% endif %}
                </h5>
                <div>
                    {% if item.lastMessage %}
                        {% if app.user == item.lastMessage.sender %}
                            <p>You said:</p>
                        {% else %}
                            <p>{{ item.lastMessage.sender.pseudo }} said:</p>
                        {% endif %}
                        <p>{{ item.lastMessage.content }}</p>
                        <small>{{ item.lastMessage.timestamp|date('d/m/Y H:i') }}</small>
                    {% else %}
                        <p>Say hi</p>
                    {% endif %}
                </div>
            </div>
        </a>
    {% endfor %}
</div>
