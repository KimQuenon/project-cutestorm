{% extends 'base.html.twig' %}

{% block title %}Awards{% endblock %}

{% block body %}
    <div class="container">
        <div class="text-center my-5">
            <h1 class="display-4">Top 3 Most Liked Posts</h1>
        </div>
        {% include 'partials/_podium.html.twig' with {'items': topLikedPosts, 'itemType': 'post', 'itemCategory': 'likedPost'} %}
    </div>

    <div class="container">
        <div class="text-center my-5">
            <h1 class="display-4">Top 3 Most Commented Posts</h1>
        </div>
        {% include 'partials/_podium.html.twig' with {'items': topCommentedPosts, 'itemType': 'post', 'itemCategory': 'commentedPost'} %}
    </div>

    <div class="container">
        <div class="text-center my-5">
            <h1 class="display-4">Top 3 Most Liked Users</h1>
        </div>
        {% include 'partials/_podium.html.twig' with {'items': topLikedUsers, 'itemType': 'user', 'itemCategory': 'likedUser'} %}
    </div>

    <div class="container">
        <div class="text-center my-5">
            <h1 class="display-4">Top 3 Most Active Users</h1>
        </div>
        {% include 'partials/_podium.html.twig' with {'items': topCreators, 'itemType': 'user', 'itemCategory': 'activeUser'} %}
    </div>

    <div class="container">
        <div class="text-center my-5">
            <h1 class="display-4">Top 3 Most Popular Users</h1>
        </div>
        {% include 'partials/_podium.html.twig' with {'items': topFollowedUsers, 'itemType': 'user', 'itemCategory': 'followedUser'} %}
    </div>
{% endblock %}
