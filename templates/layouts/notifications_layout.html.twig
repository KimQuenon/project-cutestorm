{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ title }}</h1>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <p class="mb-0">Vous avez {{ unreadCount }} notification(s) non lue(s).</p>
            <a href="{{ markAsReadPath }}" class="btn btn-primary">Marquer tout comme lu</a>
        </div>

        {% if notifications|length > 0 %}
            <div class="list-group">
                {% for notification in notifications %}
                    <div class="list-group-item d-flex justify-content-between align-items-start {% if not notification.isRead %}list-group-item-action{% endif %}">
                        <div class="ms-2 me-auto">
                            {% block notification_content %}{% endblock %}
                        </div>
                        {% if not notification.isRead %}
                            <span class="badge bg-danger rounded-pill">Non lu</span>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% block pagination %}{% endblock %}
        {% else %}
            <div class="alert alert-info mt-3" role="alert">
                Aucune notification
            </div>
        {% endif %}
    </div>
{% endblock %}
