
{% extends "layouts/form_layout.html.twig" %}

{% block title %}Edition mode{% endblock %}

{% block form_title %}Edit avatar{% endblock %}

{% block form_text %}Add a new face to your profile by selecting a new profile picture. It's really simple, all you go to do is click on the file right there and select your avatar. And why not selecting a new banner along the way ?{% endblock %}

{% block form_content %}
    {% set image = app.user.avatar %}
    {% set imagePath = app.user.avatar %}
    {% set imageId = app.user.avatar %}
    {% set deletePath = path('profile_avatar_delete') %}

    {% include "partials/form/_editContent.html.twig" with {
        images: [image],
        imagePaths: [imagePath],
        imageIds: [imageId],
        deletePaths: [deletePath]
    } %}
{% endblock %}

{% block additionalButton %}
    <a href="{{ path('profile_banner') }}" class="btn btn-white w-52">Change banner</a>
{% endblock %}

