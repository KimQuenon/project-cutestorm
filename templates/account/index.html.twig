{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container mx-auto flex justify-center items-center min-h-screen">
        <div class="w-full max-w-md bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl font-semibold mb-6">Connexion</h1>

            {% if hasError %}
                <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
                    Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide.
                </div>
            {% endif %}
            {% if loginError %}
                <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
                    {{ loginError }}
                </div>
            {% endif %}

            <form action="{{ path('account_login') }}" method="POST">
                <div class="mb-4">
                    <label for="email" class="block text-gray-700">E-mail</label>
                    <input type="text" name="_username" id="email" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Adresse e-mail..." required value="{{ username }}">
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-gray-700">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Mot de passe..." required>
                </div>

                <div class="mt-6">
                    <button type="submit" class="w-full bg-green-500 text-white py-2 rounded-md hover:bg-green-600 transition-colors">Connexion</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
